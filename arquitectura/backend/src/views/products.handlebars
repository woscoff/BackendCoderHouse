<div class="container items-per-page"></div>
{{#if statusBool}}
<div class="container">
	<div class="row">
		{{#each payload}}
		<div class="col-4 card product">
			<div class="card-body">
				<h3 class="card-title">{{title}}</h3>
				<div class="card-text">
					<p>{{description}}</p>
					<span>Precio: $ {{price}}</span>
				</div>
				<div class="card-button">
					<button class="btn btn-primary btn-card-addtocart">Agregar al carrito</button>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
</div>

{{else}}
<div>
	<h2>No se encontraron productos</h2>
</div>
{{/if}} {{#if statusBool}}
<div class="container container-pages">
	{{#if hasPrevPage}}
	<a href="">PAG ANTERIOR</a>
	{{/if}} {{#if hasNextPage}}
	<a href="">PAG ANTERIOR</a>
	{{/if}}
</div>
{{/if}}
